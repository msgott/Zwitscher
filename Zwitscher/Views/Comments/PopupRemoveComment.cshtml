@model Zwitscher.Models.Comment

@{
    ViewData["Title"] = "Edit";
}

<h1>Kommentar entfernen</h1>


<hr />

    <div >

    <form asp-controller="Comments" asp-action="RemoveCommentFromComment" enctype="multipart/form-data">


            <input type="hidden" name="commentID" value="@Model.Id" />
        <input type="hidden" name="commentToRemoveId" value="@ViewBag.commentToRemove" />
            <div class="form-group">
                Sicher, dass Sie diesen Kommentar aus der Liste entfernen wollen?

            </div>
            <div class="form-group">
                <input type="submit" value="entfernen" class="btn btn-danger" />
            </div>
        </form>
    </div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
